  skydome:
    type    : sphere
    center  : [ 0.0, 0.0, 0.0 ]
    radius  : 10.0
    mapper  : skylight

  ball:
    type    : sphere
    center  : [ 0.0, 0.2, 0.0 ]
    radius  : 0.2
    mapper  : clearglass2

  ball2:
    type    : sphere
    center  : [ 0.4, 0.2, -0.3 ]
    radius  : 0.2
    mapper  : polishplastic

  ball3:
    type    : sphere
    center  : [ -0.4, 0.2, 0.3 ]
    radius  : 0.2
