light-spec:
  ceiling_light:
    temperature: 6500
    radiosity  : 1950
    directivity: 0.0       # 指向性: 0.0(なし) 〜 1.0(平行光源)
    rad_est    : formula   # 直接光輝度推定方法
    direction  : out       # 発光方向: out((通常方向)), in(ドーム光源など)
  
  pana_led_ldg11dg95w:
    temperature: 6500      # 昼光 6500, 昼白 5000, 温白 3500, 電球 2700
    radiosity  : 48320     # 1370 lm / 電球表面積(直径95mm)
    directivity: 0.0
    rad_est    : photonmap # 直接光輝度推定方法
    direction  : out       # 発光方向: out((通常方向)), in(ドーム光源など)

  pana_led_ldg11lg95w:
    temperature: 2700
    radiosity  : 48320
    directivity: 0.0
    rad_est    : photonmap # 直接光輝度推定方法
    direction  : out       # 発光方向: out((通常方向)), in(ドーム光源など)
  
  sun:
    temperature: 6500
    radiosity  : 5000
    directivity: 1.0
    rad_est    : photonmap
    direction  : out

  sky
    temperature: 12000
    radiosity  : 10000
    directivity: 0.0
    rad_est    : photonmap
    direction  : in


